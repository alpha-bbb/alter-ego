{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "outDir": "dist",
    "strict": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "esModuleInterop": true,
    "lib": [
      "ES2020"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
